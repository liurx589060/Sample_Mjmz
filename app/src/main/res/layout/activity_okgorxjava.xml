<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/normalRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="17dp"
        android:text="普通请求" />

    <Button
        android:id="@+id/cacheRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:text="缓存请求"
        android:layout_alignBaseline="@+id/normalRequest"
        android:layout_alignBottom="@+id/normalRequest"
        android:layout_toRightOf="@+id/normalRequest"
        android:layout_toEndOf="@+id/normalRequest" />

    <Button
        android:id="@+id/localAddRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="本地Add方法请求"
        android:layout_alignBaseline="@+id/cacheRequest"
        android:layout_alignBottom="@+id/cacheRequest"
        android:layout_toRightOf="@+id/cacheRequest"
        android:layout_toEndOf="@+id/cacheRequest"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp" />

    <TextView
        android:id="@+id/resultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/normalRequest"
        android:layout_alignStart="@+id/normalRequest"
        android:layout_below="@+id/normalRequest"
        android:layout_marginTop="49dp"
        android:text="TextView" />
</RelativeLayout>